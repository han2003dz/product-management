extends ../../layouts/default.pug
block main
  .m-2
    h1(class="mb-4") Thêm mới nhóm quyền
    form(
      action=`${prefixAdmin}/roles/create`
      method="POST"
    )
      .form-group
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )
      .form-group
        label(for="desc") Mô tả
        input(
          type="text"
          class="form-control"
          id="desc"
          name="description"
        )
      .form-group
        button(type="")
