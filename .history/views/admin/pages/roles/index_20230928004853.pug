extends ../../layouts/default.pug

block main
  .m-2
    h1.mb-4 Nhóm quyền
    .card.mb-3
      .card-header Danh sách
        .card-body
          .row
            .col-10
              
            .col-2
              a.btn.btn-outline-success(href=`${prefixAdmin}/roles/create`) + Thêm mới
          
          table.table.table-hover.table-sm.mt-4(
          )
            thead
              tr
                th 
                  input(class="form-check-input" type="checkbox" name="checkAll")
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Vị trí
                th Trạng thái
                th Hành động
                th Chi tiết

            tbody
              each item, index in products
                tr 
                  td 
                    input(
                      class="form-check-input"
                      type="checkbox"
                      name="id"
                      value=item.id
                    )
                    
                  td #{index + 1}

                  td
                    img(
                      class="img-products"
                      src=item.thumbnail
                      alt=item.title
                      width="100px"
                      height="70px"
                    )
                  td #{item.title}

                  td #{item.price}$

                  td
                    input(
                      type="number"
                      value=item.position
                      style="width: 60px"
                      min="1"
                      name="position"
                    )

                  td
                    if(item.status == "active")
                      a(
                        href="javascript:;" 
                        class="badge bg-success fs-6"
                        data-status=item.status
                        data-id=item.id
                        link-change-status
                        ) Hoạt động 
                    else
                      a(
                        href="javascript:;" 
                        class="badge bg-danger fs-6"
                        data-status=item.status
                        data-id=item.id
                        link-change-status
                        ) Dừng hoạt động
                  td
                    a(
                      class="btn btn-warning btn-sm"
                      href=`${prefixAdmin}/products/edit/${item.id}`
                    ) Sửa
                    button(
                      class="btn btn-danger btn-sm ms-1" 
                      data-id=item.id
                      button-delete
                    ) Xóa
                  td
                    a(
                      class="btn btn-sm btn-info"
                      href=`${prefixAdmin}/products/detail/${item.id}`
                    ) Xem
