extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
  +alert-success(3000)
  +alert-error(3000)
  .m-2
    h1(class="mb-4") Thêm mới tài khoản
    form(
      action=`${prefixAdmin}/accounts/create`
      method="POST"
      enctype="multipart/form-data"
    )
      div(class="form-group")
        label(for="fullName") Họ tên *
        input.form-control(
          type="text" 
          id="fullName" 
          name="fullName"
          required
        )
      .form-group
        label(for="email") Email *
        input.form-control(
          type="email"
          id="email"
          name="email"
          required
        )
      .form-group
        label(for="password") Mật khẩu *
        input.form-control(
          type="password"
          name="password"
          id="password"
          required
        )
      div(class="form-group")
        label(for="phone") Số điện thoại
        input(
          type="text"
          class="form-control"
          id="phone"
          name="phone"
        )
    .form-group.mb-2(upload-image)
      label(for="avatar") Ảnh
      input.form-control(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        upload-image-preview
        class="image-preview"
      )

