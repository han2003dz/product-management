extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main 
  .m-2
    +alert-success(5000)
    +alert-error(5000)
    h1 Chỉnh sửa trang 404
    form(
      action=`${prefixAdmin}/settings/not-found?_method=PATCH`
      method="POST"
      enctype="multipart/form-data"
    )
      .form-group.mb-2(upload-image)
        label(for="logo") Logo
        input.form-control(
          type="file"
          class="form-control-file"
          id="logo"
          name="logo"
          accept="image/*"
          upload-image-input
        )
        img(
          src=(settingGeneral ? settingGeneral.logo : "")
          upload-image-preview
          class="image-preview"
        )
        