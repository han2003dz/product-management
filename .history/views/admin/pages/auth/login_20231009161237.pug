extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  .container
    section.section.register.min-vh-100.d-flex.flex-column.align-items-center.justify-content-center.py-4
      .container
        .row.justify-content-center
          .col-lg-4.col-md-6.d-flex.flex-column.align-items-center.justify-content-center(class="shadow-lg p-3 mb-5 bg-body rounded")
            .d-flex.justify-content-center.py-4
              h1(style='color: #000080;') Đăng nhập

            form(
              action=`${prefixAdmin}/auth/login`
              method="POST"
            )
              .card.mb-3
                
                  .pt-4.pb-2
                    h5.card-title.text-center.pb-0.fs-4 Login to Your Account
                    p.text-center.small Enter your username &amp; password to login
                  form.row.g-3.needs-validation(novalidate='')
                    .col-12
                      label.form-label(for='email') Email
                      input.form-control(
                        type='text' 
                        name='email' 
                        id="email" 
                        required
                      )
                      div(class="invalid-feedback") Please enter your email.
                    .col-12.mt-2
                      label.form-label(for='password') Password
                      input.form-control(
                        type='password' 
                        name='password' 
                        id="password" 
                        required
                      )
                      div(class="invalid-feedback") Please enter your password.
                    .col-12.mt-4
                      button.btn.btn-primary.w-100(type='submit') Login
