extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thêm mới sản phẩm
  form(
    action=`${prefixAdmin}/products/create`
    id="form-create-product"
    method="POST"
  )
    .form-group 
      label(for="title") Tiêu đề
      input.form-control(
        type="text"
        id="title"
        name="title"
        required
      )
    .form-group
      label(for="desc") Mô tả
      textarea.form-control(
        id="desc"
        name="description"
        rows="5"
      )
    .form-group 
      label(for="price") Giá
      input(
        type="number"
        class="form-control"
        id="price"
        value="0"
        min="0"
      )
    .form-group 
      label(for="thumbnail") Ảnh
      input.form-control(
        type="text"
        id="thumbnail"
        name="thumbnail"
      )
    .form-group 
      label(for="position") Vị trí
      input(
        type="number"
        id
      )
    .form-group 
    .form-group 
    .form-group 