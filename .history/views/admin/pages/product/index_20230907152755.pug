extends ../../layouts/default.pug
include ../../mixins/filter-status
include ../../mixins/search
block main
  h1 Danh sách sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter(filterStatus)
        .col-6
          +search(keyword)
  .card.mb-3
    .card-header Danh sách
      .card-body
        table.table.table-hover.table-sm
          thead
            tr
              th STT
              th Hình ảnh
              th Tiêu đề
              th Giá
              th Trạng thái
              th Hành động

          tbody
            each item, index in products
              tr 
                td #{index + 1}
                td
                  img(
                    class="img-products"
                    src=item.thumbnail
                    alt=item.title
                    width="100px"
                    height="70px"
                  )
                td #{item.title}
                td #{item.price}$
                td
                  if(item.status == "active")
                    a(href="#" class="badge bg-success fs-6") Hoạt động 
                  else
                    a(href="#" class="badge bg-danger fs-6") Dừng hoạt động
                td
                  button(class="btn btn-warning btn-sm") Sửa
                  button(class="btn btn-danger btn-sm ms-1") Xóa
  
  nav(aria-label='Page navigation example')
    ul.pagination.m-0
      if(pagination.currentPage > 1)
        li.page-item.h-100
          a.page-link.text-info.fs-5(href="#" aria-label="Previous" link-pagination=(pagination.currentPage - 1))
            span(aria-hidden='true') &laquo;
      
      - for (var i = 1; i <= pagination.totalPages; i++)
        li(class=`page-item ${pagination.currentPage == i ? 'active' : ""}`)
          a.page-link.text-info.fs-5(href='#' aria-current='page' aria-label='Previous' link-pagination=i) #{i}

      if(pagination.currentPage < pagination.totalPages)
        li.page-item.h-100
          a.page-link.text-info.fs-5(href="#" aria-label="Next" link-pagination=(pagination.currentPage + 1))
            span(aria-hidden='true') &raquo;

    
  nav(aria-label='...')
    ul.pagination
      li.page-item.disabled
        a.page-link(href='#' tabindex='-1' aria-disabled='true') Previous
      li.page-item
        a.page-link(href='#') 1
      li.page-item.active(aria-current='page')
        a.page-link(href='#') 2
      li.page-item
        a.page-link(href='#') 3
      li.page-item
        a.page-link(href='#') Next


