mixin pagination(pagination)
    nav(aria-label='Page navigation example')
        ul.pagination.m-0
            -var maxPageToShow = 3;
            
            if(pagination.currentPage > 1)
                li.page-item.h-100
                    a.page-link.text-info.fs-5(href="#" aria-label="Previous" link-pagination=(pagination.currentPage - 1))
                        span(aria-hidden='true') &laquo;
        
            - for (var i = 1; i <= pagination.totalPages; i++)
                li(class=`page-item ${pagination.currentPage == i ? 'active' : ""}`)
                    a.page-link.text-info.fs-5(href='#' aria-current='page' aria-label='Previous' link-pagination=i) #{i}

            if(pagination.currentPage < pagination.totalPages)
                li.page-item.h-100
                    a.page-link.text-info.fs-5(href="#" aria-label="Next" link-pagination=(pagination.currentPage + 1))
                        span(aria-hidden='true') &raquo;
