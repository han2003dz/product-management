extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Chat")

    .row
      .col-12
        .chat(my-id=user.id)
          //- .inner-head
          //-   .inner-avatar EY
          //-   .inner-name Em Yêu
          .inner-body
            each chat in chats
              div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                if(chat.user_id != user.id)
                  .inner-name #{chat.infoUser.fullName}
                if(chat.content)
                  .inner-content
                    | #{chat.content}
                if(chat.images)
                  .inner-images
                    each image in images
                      img(src=image)
            
            .inner-list-typing

            .inner-preview-images
              div(class="custom-")

          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              label(
                class="px-2 btn btn-light ms-2" for="file-upload-with-preview-upload-images"
              )
                i(class="fa-regular fa-image px-1")
              span(class="button-icon btn btn-light mx-2") 
                i(class="fa-regular fa-face-smile")
              button
                i.fa-solid.fa-paper-plane
  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")  