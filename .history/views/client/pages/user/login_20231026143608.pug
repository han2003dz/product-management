
include ../../
block main

  .container.my-5
    .row.justify-content-center
      .col-5.wrapper
        h1(class="text-center ") Đăng nhập
        
        form(
          action="/user/login"
          method="POST"
        )
          
          div(class="form-group")
            label(for="email") Email
            .input__box.d-flex.align-items-center
              i(class='bx bx-user text-dark')
              input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Nhập email..."
                required
              )
          div(class="form-group mt-2 mb-2")
            label(for="password") Mật khẩu
            .input__box.d-flex.align-items-center
              i(class='bx bx-lock-alt text-dark')
              input(
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Nhập mật khẩu..."
                required
              )
              i(class="bi bi-eye-fill text-dark eye-pass")
          a(href="/user/password/forgot") Quên mật khẩu?
          div(class="form-group mt-2 d-flex justify-content-center")
            button(
              type="submit"
              class="btn btn-primary btn-block w-100"
            ) Đăng nhập
          div(class="form-group mt-2 d-flex justify-content-center")
            span Bạn chưa có tài khoản? 
              a(href="/user/register") Đăng ký
              