include ../../layouts/default-login.pug
block main

  .container.my-5
    .row.justify-content-center
      .col-5.wrapper
        h1(class="text-center") Nhập mã OTP xác thực
        form(
          action="/user/password/otp"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
              value=email
              readonly
            )
          div(class="form-group")
            label(for="otp") Mã OTP
            input(
              type="text"
              class="form-control"
              id="otp"
              name="otp"
              required
            )
          
          div(class="form-group mt-2 d-flex justify-content-center")
            button(
              type="submit"
              class="btn btn-primary"
            ) Xác nhận