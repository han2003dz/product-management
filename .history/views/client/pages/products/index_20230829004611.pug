extends ../../layouts/default.pug
block main
    +box-head("Danh sách sản phẩm")

    .row
      .col-4.mb-3
        .product-item
          .inner-image
            img(src="https://i.dummyjson.com/data/products/1/thumbnail.jpg", alt="iPhone 9")
          .inner-content
            h3.inner-title iPhone 9
            .inner-price-new 80$
            .inner-price-old 100$
            .inner-discount -20%
      each item in products
        .col-4.mb-3
          .product-item
            .inner-image
              img(
                src=item.thumbnail
                alt=item.title
              )
            .inner-content
              h3.inner-title #{item.title}
              .inner-price-new #{item.priceNew}$
              .inner-price-old #{item.price}$
              .inner-discount -#{item.discountPercentage}%