extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../
block main
  .container.my-3
    .row
      .col-12
        +box-head("Sản phẩm nổi bật")

    .row
      each item in productsFeatured
          a.col-4.mb-3(href=`/products/${item.slug}`)
            .product-item
              .inner-image
                img(
                  src=item.thumbnail
                  alt=item.title
                )
              .inner-content
                h3.inner-title #{item.title}
                .inner-price-new #{item.priceNew}$
                .inner-price-old #{item.price}$
                .inner-discount -#{item.discountPercentage}%